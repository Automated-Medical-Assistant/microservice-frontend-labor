{% extends 'base.html.twig' %}

{% block title %}List{% endblock %}

{% block body %}
    <h1>List</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Number</th>
            <th>creation date</th>
            <th>add status date</th>
            <th>status</th>
            <th>set status</th>
        </tr>
        </thead>
        <tbody>
        {% for numberDto in numberDtoList %}
            <tr>
                <td>{{ numberDto.number }}</td>
                <td>{{ numberDto.creationDate }}</td>
                <td>{{ numberDto.modifiedStateDate }}</td>
                <td>{% if numberDto.status is null %}
                        wait for result
                    {% elseif numberDto.status %}
                        positiv
                    {% else %}
                        negativ
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('status_update', {'nummer': numberDto.number}) }}">
                        {% if numberDto.status is null %}
                            edit
                        {% else %}
                            show
                        {% endif %}
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
